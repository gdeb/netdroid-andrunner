// Netdroid Andrunner Configuration
{
	// will be used by gulp to setup the build process
	"project": {
		"name": "netdroid",
		"compression": false,
		"uglify": false,
		"path": "_build/development",
		"bundle_assets": false,
		"watch_changes": true
	},
	"logger": {
		"type": "console",
		"log_level": "debug",
		"colored": true
		// "loader": "debug",
		// "websocket_server": "debug"
	},
	"settings": {
		"db": {
			"adapter": "nedb"
		},
		"db.adapter": {
			"folder": "./_build/db"
		},
		"http_server": {
			"port": 8080
		},
		"http_server.session": {
			"secret": "go netdroid"
		},
		"websocket_server": {
			"port": 8081
		}
	}
}