// Netdroid Andrunner Configuration
{
	// will be used by gulp to setup the build process
	"project": {
		"name": "netdroid",
		"compression": false,
		"uglify": false,
		"path": "_build/development",
		"bundle_assets": false,
		"watch_changes": true
	},
	"logger": {
		"type": "console",
		"log_level": "debug",
		"colored": true,
		// "loader": "debug",
		// "websocket_server": "debug"
	},
	"settings": {
		"db_type": "nedb",
		"db_folder": "./_build/db",
		"http_port": 8080,
		"session_secret": "go netdroid",
		"ws_port": 8081
	}
}