// Netdroid Andrunner Configuration
{
	// will be used by gulp to setup the build process
	"project": {
		"compression": false,
		"uglify": false,
		"path": "_build/development",
		"bundle_assets": false,
		"watch_changes": true
	},
	"logger": {
		"type": "console",
		"log_level": "info",
		"loader": "debug",
		"websocket_server": "debug"
	},
	"modules": [
		"db",
		"users",
		"authentication",
		// "chat",
		"http_server",
		"websocket_server"
	],
	"config": {
		"db": {
			"adapter": "nedb",
			"folder": "./_build/db"
		},
		"http_server": {
			"port": 8080
		},
		"http_server.session": {
			"secret": "go netdroid"
		},
		"websocket_server": {
			"port": 8081
		}
	}
}